{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "../../../node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "compileOnSave": false
}
