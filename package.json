{
  "engines": {
    "node": ">= 14",
    "yarn": ">= 2"
  },
  "scripts": {
    "start": "run-s start:lib:protoc-gen-worker",
    "start:lib:protoc-gen-worker": "nodemon --watch packages/protoc-gen-worker/src --watch packages/protoc-gen-worker/test/proto -e ts,proto --exec 'npm run build:lib:protoc-gen-worker && npm run test:lib:protoc-gen-worker:generate && npm run test:lib:protoc-gen-worker:generate-grpc-web && echo \"Done\"'",
    "build": "run-s build:lib:common build:lib:core build:lib:worker build:lib:worker-client build:lib:web-client build:lib:protoc-gen-worker build:lib:well-known-types",
    "build:lib:core": "yarn workspace @metabreak/grpc-core build",
    "build:lib:common": "yarn workspace @metabreak/grpc-common build",
    "build:lib:web-client": "yarn workspace @metabreak/grpc-web-client build",
    "build:lib:protoc-gen-worker": "yarn workspace @metabreak/protoc-gen-worker build",
    "build:lib:worker": "yarn workspace @metabreak/grpc-worker build",
    "build:lib:worker-client": "yarn workspace @metabreak/grpc-worker-client build",
    "build:lib:well-known-types": "yarn workspace @metabreak/grpc-well-known-types build",
    "build:lib:well-known-types:generate": "yarn workspace @metabreak/grpc-well-known-types generate",
    "test": "run-s test:lib:protoc-gen-worker",
    "test:lib:protoc-gen-worker": "yarn workspace @metabreak/protoc-gen-worker test",
    "test:lib:protoc-gen-worker:watch": "yarn workspace @metabreak/protoc-gen-worker test --watchAll",
    "test:lib:protoc-gen-worker:generate-grpc-worker": "yarn workspace @metabreak/protoc-gen-worker generate:grpc-worker",
    "test:lib:protoc-gen-worker:generate-grpc-web": "yarn workspace @metabreak/protoc-gen-worker generate:grpc-web",
    "release": "semantic-release",
    "examples": "run-p examples:basic examples:backend",
    "examples:basic": "yarn workspace @metabreak/grpc-example-front start --port 4200",
    "examples:backend": "docker-compose -f examples/back/docker-compose.yaml down && docker-compose -f examples/back/docker-compose.yaml up --remove-orphans --build",
    "examples:backend:no-proxy": "yarn workspace @metabreak/grpc-example-back start",
    "examples:proto:generate": "run-s examples:proto:generate-backend examples:proto:generate-basic",
    "examples:proto:generate-basic": "mkdir -p examples/basic-example/src/proto && rm -rf examples/basic-example/src/proto/* && $(pwd)/node_modules/.bin/grpc_tools_node_protoc --plugin=protoc-gen-worker=$(pwd)/dist/protoc-gen-worker/main.js --ng_out=config=examples/basic-example/ngx-grpc.conf.js:examples/basic-example/src/proto -I examples/proto $(find examples/proto -iname \"*.proto\")",
    "examples:proto:generate-backend": "cd examples/backend && npm run proto:generate",
    "format": "yarn prettier --write '**/**/*.{md,html,yaml,yml,ts,js,tsx,jsx}'"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/release-notes-generator": "9.0.3",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.1",
    "@types/prettier": "2.3.2",
    "jest": "27.0.6",
    "jest-environment-jsdom": "27.0.6",
    "nodemon": "2.0.12",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.4",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "workspaces": [
    "examples/front",
    "examples/back",
    "packages/*"
  ]
}
